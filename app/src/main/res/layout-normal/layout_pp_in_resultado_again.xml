<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="60dp"
                android:elevation="4dp"
                android:background="#062450">
                <include
                    layout="@layout/layout_background_pp_in_part_first"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top|center"
                        android:scaleType="fitStart"
                        android:elevation="0dp"
                        android:src="@drawable/rectangulo_01"></ImageView>

                    <ImageView
                        android:id="@+id/IDBackInResultadoAgain"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="30dp"
                        android:elevation="4dp"
                        android:clickable="true"
                        android:src="@drawable/button_back_profile" />
                    <TextView
                        android:id="@+id/IdTextViewReceta"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ImageViewButtonBackInPerfil"
                        android:layout_marginTop="200dp"
                        android:layout_marginBottom="60dp"
                        android:textStyle="bold"
                        android:paddingLeft="40dp"
                        android:text="@string/app_es_resultado_juego_titulo"
                        android:textColor="#CDDC39"
                        android:textSize="25dp"
                        android:layout_alignParentLeft="true"

                        android:layout_marginLeft="35dp"
                        android:textAlignment="textStart"
                        android:scaleY="2"
                        android:scaleX="1.4"
                        android:lineHeight="26dp"

                        ></TextView>
                    <LinearLayout
                        android:id="@+id/IDResultadoRecibeUnCantigoTextView"
                        android:background="@drawable/button_border_inicio_white_2"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_below="@+id/IdTextViewReceta"
                        android:layout_width="match_parent"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:layout_height="60dp">

                        <TextView
                            android:id="@+id/marg"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="@string/app_es_resultado_juego_titulo_cuerpo"
                            android:textAlignment="center"
                            android:textColor="#062450"
                            android:scaleX="1"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/IDAskResultadoJuegoBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_below="@+id/IDResultadoRecibeUnCantigoTextView"
                        android:background="@drawable/button_border_inicio_white_bottom"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:elevation="4dp"
                        android:gravity="center"

                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="#EA2C92"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="25dp"
                                android:src="@drawable/alert_white" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/app_es_incorrecto"
                                android:textAlignment="textEnd"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"

                                android:textSize="20dp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="40dp"

                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/IDTextResultadoAgainIncorrecto"
                                android:text="Todos tus amigos hombres deben tomar un shot de pisco puro"
                                android:textStyle="normal"
                                android:textSize="25dp"
                                android:textAlignment="center"
                                android:textColor="#062450"
                                android:scaleX="0.9"
                                ></TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/IDTextViewAgainMasOpciones"
                        android:layout_below="@+id/IDAskResultadoJuegoBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/app_es_resultado_jugar_mas_opciones"
                        android:textStyle="normal"
                        android:textSize="26dp"
                        android:textAlignment="center"
                        android:textColor="#062450"
                        android:scaleX="0.9"></TextView>
                    <LinearLayout
                        android:layout_below="@+id/IDTextViewAgainMasOpciones"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:background="#fff"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/button_border_blue"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/IDButtonResultadoJuegoAgainJugarDenuevo"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="#00FFFFFF"
                                android:elevation="4dp"
                                android:paddingLeft="25dp"
                                android:text="@string/app_es_jugar_denuevo"
                                android:textAlignment="textStart"
                                android:textStyle="bold"
                                android:textColor="#fff"
                                android:textSize="14dp"
                                android:textAllCaps="false"
                                tools:ignore="RtlCompat"/>

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="18dp"
                                android:layout_marginRight="25dp"
                                android:src="@drawable/ruleta_mini" />

                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
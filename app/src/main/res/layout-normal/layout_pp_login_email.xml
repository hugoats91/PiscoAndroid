<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_pp_login_email_normal_LinearLayout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/layout_background_pp_login_normal_part_first"/>

            <include layout="@layout/layout_background_pp_login_normal_part_second"/>

            <RelativeLayout
                style="@style/layout_pp_login_normal_RelativeLayoutThree"
                >
                <LinearLayout
                    style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout">
                    <TextView
                        android:id="@+id/textView"
                        style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_TextView"

                        android:textAlignment="center"
                        />
                    <LinearLayout
                        style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutFirst"
                        android:orientation="vertical">
                        <EditText
                            android:background="@drawable/editext_border"
                            android:id="@+id/IDEditTextLoginEmailCorreo"
                            android:inputType="textEmailAddress"
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutFirst_EditText"
                            android:hint="@string/app_es_correo" />
                        <EditText
                            android:background="@drawable/editext_border"
                            android:id="@+id/IDEditTextLoginEmailContrasena"
                            android:inputType="textPassword"
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutFirst_EditText"
                            android:hint="@string/app_es_contrasena" />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutSecond"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/IDButtonLoginEmail"
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutSecond_Button"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutThree"
                        android:textAlignment="center"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/simpleSwitch"
                            android:thumb="@drawable/switch_selector"
                            android:track="@drawable/switch_selector_track"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutThree_TextView"
                            android:layout_width="180dp" />

                    </LinearLayout>
                    <LinearLayout
                        style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutFour"
                        android:textAlignment="center"

                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/IDTextViewRecuperarPassword"
                            android:textAlignment="center"
                            android:clickable="true"
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutFour_TextView"
                            />


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
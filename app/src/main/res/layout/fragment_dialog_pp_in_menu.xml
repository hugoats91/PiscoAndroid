<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/IdFrameLayout"

    android:background="#20FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/ImageViewButtonMenuClose"
        android:layout_marginTop="20dp"

        android:layout_marginLeft="40dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="left"
        android:clickable="true"
        android:src="@drawable/menucerrar"/>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/IDLinearLayoutAllContent"
        android:orientation="vertical">
        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ScrollView>
    </LinearLayout>-->
    <LinearLayout
        android:id="@+id/menuLinearLayout"
        android:layout_below="@+id/midTableLayout"
        android:layout_width="fill_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="3">
        <LinearLayout
            android:id="@+id/IDPartFirstLinearLayout"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:background="@drawable/button_border_white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:id="@+id/IdCardViewPerfil"
                    android:clickable="true"
                    android:layout_width="165dp"
                    android:layout_height="180dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginLeft="15dp"

                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/menuperfil"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:contentDescription="@string/app_name" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/id_app_es_menu_perfil"

                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/colorAccent"
                            android:layout_marginLeft="0dp"
                            android:textStyle="bold"
                            android:lineHeight="12dp"
                            android:textSize="25dp"
                            android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"

                            />
                        <!-- android:text="@string/app_es_menu_perfil"-->

                    </LinearLayout>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:background="@drawable/menuperfilbotonflecha"
                        android:scaleType="fitCenter"
                        android:layout_marginTop="17.5dp"
                        android:padding="8dp"
                        android:baselineAlignBottom="true"
                        android:foregroundGravity="bottom"
                        android:layout_gravity="bottom|right">
                    </ImageButton>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:background="@drawable/button_border_white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:id="@+id/IdCardViewJugar"
                    android:layout_toRightOf="@+id/IdCardViewPerfil"
                    android:layout_width="165dp"
                    android:layout_height="180dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginLeft="15dp"

                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/menuruleta"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:contentDescription="@string/app_name" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="22dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/id_app_es_menu_jugar"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/colorAccent"
                            android:layout_marginLeft="0dp"
                            android:textStyle="bold"
                            android:lineHeight="12dp"
                            android:textSize="25dp"
                            android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"
                            />
                        <!-- android:text="@string/app_es_menu_jugar"-->

                    </LinearLayout>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:background="@drawable/menuruletabotonflecha"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:layout_marginTop="17.5dp"
                        android:baselineAlignBottom="true"
                        android:foregroundGravity="bottom"
                        android:layout_gravity="bottom|right">
                    </ImageButton>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/IDPartSecondLinearLayout"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_below="@+id/IDPartFirstLinearLayout"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:background="@drawable/button_border_white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:layout_width="165dp"
                    android:layout_below="@+id/IdCardViewPerfil"
                    android:id="@+id/IDCardViewReceta"
                    android:layout_height="180dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginLeft="15dp"

                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/menucopa"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:contentDescription="@string/app_name" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/id_app_es_menu_receta"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/colorAccent"
                            android:layout_marginLeft="0dp"
                            android:lineHeight="12dp"
                            android:textSize="25dp"
                            android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"
                            />
                        <!-- android:text="@string/app_es_menu_receta"-->

                    </LinearLayout>
                    <ImageButton

                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:background="@drawable/menurecetabotonflecha"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:layout_marginTop="16dp"
                        android:baselineAlignBottom="true"
                        android:foregroundGravity="bottom"
                        android:layout_gravity="bottom|right">
                    </ImageButton>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:background="@drawable/button_border_white"
                    app:cardElevation="8dp"
                    android:id="@+id/IDCardViewDondeCompra"
                    android:layout_toRightOf="@+id/IDCardViewReceta"
                    android:layout_below="@+id/IdCardViewJugar"
                    android:layout_width="165dp"
                    android:layout_height="180dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/menucanasta"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp"
                            android:contentDescription="@string/app_name" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:id="@+id/id_app_es_menu_donde_comprar"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/colorAccent"
                            android:layout_marginLeft="0dp"
                            android:textStyle="bold"
                            android:lineHeight="30dp"
                            android:textSize="25dp"
                            android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"
                            />
                        <!-- android:text="@string/app_es_menu_donde_comprar"-->

                    </LinearLayout>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:background="@drawable/menucanastabotonflecha"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:layout_marginTop="9.5dp"
                        android:baselineAlignBottom="true"
                        android:foregroundGravity="bottom"
                        android:layout_gravity="bottom|right">
                    </ImageButton>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/IDPartThreeLinearLayout"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_below="@+id/IDPartSecondLinearLayout"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:background="@drawable/button_border_white"
                    app:cardElevation="8dp"
                    android:layout_below="@+id/IDCardViewReceta"
                    android:layout_width="165dp"
                    android:id="@+id/IDCardViewSobrePisco"
                    android:layout_height="180dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginLeft="15dp"

                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/menuinformacion"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:id="@+id/IDDialogMenuAPRENDE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="6.5dp"
                            android:layout_marginRight="20dp"
                            android:lineHeight="25dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:textSize="25dp"
                            android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"
                            />
                        <!-- android:text="@string/app_es_menu_aprende_sobre_pisco"-->

                    </LinearLayout>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:layout_below="@+id/IDDialogMenuAPRENDE"
                        android:background="@drawable/menuinformacionbotonflecha"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:layout_marginTop="18dp"
                        android:baselineAlignBottom="true"
                        android:foregroundGravity="bottom"
                        android:layout_gravity="bottom|right">
                    </ImageButton>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:background="@drawable/button_border_white"
                    app:cardElevation="8dp"
                    android:id="@+id/IDCardViewLogin"
                    android:layout_below="@+id/IDCardViewDondeCompra"
                    android:layout_toRightOf="@+id/IDCardViewSobrePisco"
                    android:layout_width="165dp"
                    android:layout_height="180dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:layout_marginLeft="15dp"

                        android:orientation="vertical">
                        <ImageView
                            android:src="@drawable/menusalir"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/app_name" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="33dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/id_app_es_menu_salir"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_marginLeft="0dp"
                            android:textStyle="bold"
                            android:lineHeight="12dp"
                            android:textSize="25dp"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"
                            />
                        <!-- android:text="@string/app_es_menu_salir"-->

                    </LinearLayout>
                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="28dp"
                        android:background="@drawable/menusalirbotonflecha"
                        android:scaleType="fitCenter"
                        android:padding="8dp"
                        android:layout_marginTop="17.0dp"
                        android:baselineAlignBottom="true"
                        android:foregroundGravity="bottom"
                        android:layout_gravity="bottom|right">
                    </ImageButton>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LoginEmailFragment"
    tools:context=".Screen.LogInEmailFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />-->
    <!--<include layout="@layout/layout_pp_login_email"/>-->
    <LinearLayout
        style="@style/layout_pp_login_email_normal_LinearLayout"
        android:orientation="vertical">

        <ScrollView
            android:fillViewport="true"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/layout_background_pp_login_normal_part_first"/>

                <include layout="@layout/layout_background_pp_login_normal_part_second"/>

                <RelativeLayout
                    style="@style/layout_pp_login_normal_RelativeLayoutThree"
                    >
                    <LinearLayout
                        style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout">
                        <TextView
                            android:id="@+id/textView"
                            style="@style/txt_login"
                            android:textAlignment="center"
                            android:text="@string/app_es_activity_login_email_above_img"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:textSize="14dp"
                            android:visibility="invisible"
                            />
                        <LinearLayout
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutFirst"

                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:orientation="vertical">
                            <EditText
                                android:background="@drawable/editext_border"
                                android:id="@+id/IDEditTextLoginEmailCorreo"
                                android:inputType="textEmailAddress"
                                style="@style/txt_input_with_hint"
                              />
                            <!-- android:hint="@string/app_es_correo"-->

                            <EditText
                                android:background="@drawable/editext_border"
                                android:id="@+id/IDEditTextLoginEmailContrasena"
                                android:inputType="textPassword"
                                style="@style/txt_input_with_hint"
                          />
                            <!-- android:hint="@string/app_es_contrasena"-->
                        </LinearLayout>
                        <LinearLayout
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutSecond"

                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/IDButtonLoginEmail"
                                style="@style/button_login"

                                android:textAlignment="center"
                                />
                            <!-- android:hint="@string/app_es_activity_login_email_btn_login"-->
                        </LinearLayout>
                        <LinearLayout
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutThree"
                            android:textAlignment="center"
                            android:layout_marginTop="20dp"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/simpleSwitch"
                                android:thumb="@drawable/switch_selector"
                                android:track="@drawable/switch_selector_track"
                                android:switchMinWidth="65dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:layout_width="140dp"
                                android:layout_gravity="center"

                                android:layout_height="match_parent"/>

                            <TextView
                                style="@style/txt_login_bold_o"
                                android:id="@+id/IDTextViewMantenerSesion"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_weight="1"/>
                            <!-- android:text="@string/app_es_activity_login_email_above_button_in"-->
                        </LinearLayout>
                        <LinearLayout
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutFour"
                            android:textAlignment="center"

                            android:layout_marginTop="20dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/IDTextViewRecuperarPassword"
                                android:textAlignment="center"
                                android:clickable="true"
                                style="@style/txt_login"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                />
                            <!-- android:text="@string/app_es_activity_login_email_above_button_login"-->
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>
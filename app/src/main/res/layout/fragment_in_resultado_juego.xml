<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".Screen.ResultGameFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="60dp"
                    android:elevation="4dp"
                    android:background="@color/colorAccent">
                    <include
                        layout="@layout/layout_background_pp_in_part_first"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/CardViewINImagenRecetaCabecera"
                            android:layout_width="match_parent"
                            android:layout_height="550dp">
                            <!-- app:cardCornerRadius="20dp"-->

                                <ImageView
                                    android:id="@+id/IDInResultadoJuegoCabeceraImageView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="top|center"
                                    android:scaleType="fitXY"

                                    android:elevation="0dp"/>
                                <!--android:src="@drawable/pisco_sour_3"-->

                        </androidx.cardview.widget.CardView>


                        <ImageView
                            android:id="@+id/IDBackInResultadoJuego"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:clickable="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="40dp"
                            android:elevation="4dp"
                            android:src="@drawable/backdonde" />

                        <TextView
                            android:id="@+id/IdTextViewReceta"

                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ImageViewButtonBackInPerfil"
                            android:layout_marginTop="180dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:paddingLeft="0dp"
                            android:lineHeight="70dp"
                            android:textColor="#d7da2e"
                            android:textSize="60dp"
                            android:elevation="4dp"
                            android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="35dp"
                            android:textAlignment="textStart"

                            ></TextView>
                        <!--      android:text="@string/app_es_resultado_juego_titulo"-->
                        <LinearLayout
                            android:id="@+id/IDResultadoRecibeUnCantigoTextView"
                            android:background="@drawable/button_border_inicio_white_2"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_below="@+id/IdTextViewReceta"

                            android:layout_width="match_parent"
                            android:elevation="2dp"
                            android:gravity="center"
                            android:layout_height="60dp">

                            <TextView
                                android:id="@+id/marg"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"
                                android:fontFamily="@font/clan_offc_bold"
                                android:textSize="15dp"
                                ></TextView>
                            <!--      android:text="@string/app_es_resultado_juego_titulo_cuerpo"-->

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/IDAskResultadoJuegoBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_below="@+id/IDResultadoRecibeUnCantigoTextView"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="40dp"
                            android:elevation="3dp"
                            android:background="@drawable/button_border_inicio_white_2"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="0dp"
                                android:id="@+id/IDResultadoJuegoTextView"
                                android:textAlignment="center"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"
                                android:textColor="@color/colorAccent"
                                android:textSize="35dp"></TextView>
                            <!--      android:text="@string/app_es_resultado_juego_titulo_cuerpo"-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp"
                                android:orientation="vertical">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:id="@+id/IDResultadoJuegoButtonFirst"
                                    android:layout_marginBottom="20dp"

                                    android:textSize="14dp"
                                    android:textStyle="bold"
                                    android:textAllCaps="false"
                                    android:fontFamily="@font/clan_offc_bold"
                                    android:background="@drawable/button_border_gray"
                                    android:textColor="@color/colorAccent"></Button>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"

                                    android:textAllCaps="false"
                                    android:id="@+id/IDResultadoJuegoButtonSecond"
                                    android:background="@drawable/button_border_gray"
                                    android:textStyle="bold"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/clan_offc_bold"
                                    android:layout_marginBottom="20dp"
                                    android:textColor="@color/colorAccent"></Button>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_below="@+id/IDAskResultadoJuegoBox"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="20dp"
                            android:background="#fff"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/button_border_blue"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/IDButtonResultadoJuegoJugarDenuevo"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:background="#00FFFFFF"
                                    android:elevation="4dp"
                                    android:textAllCaps="false"
                                    android:paddingLeft="25dp"
                                    android:textAlignment="textStart"
                                    android:textColor="#fff"
                                    android:fontFamily="@font/clan_offc_bold"
                                    android:textSize="14dp"
                                    tools:ignore="RtlCompat"/>
                                <!--      android:text="@string/app_es_jugar_denuevo"-->

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="18dp"
                                    android:layout_marginRight="25dp"
                                    android:src="@drawable/ruleta_mini" />

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</FrameLayout>
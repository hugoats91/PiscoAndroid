<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Screen.ResultPlayAgainFragment">

    <!-- TODO: Update blank fragment layout     <include layout="@layout/layout_pp_in_resultado_again"></include>
-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="60dp"
                    android:elevation="4dp"
                    android:background="@color/colorAccent">
                    <include
                        layout="@layout/layout_background_pp_in_part_first"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/CardViewINRecetaReceImagenRecetaCabecera"
                            android:layout_width="match_parent"
                            android:layout_height="550dp">
                            <!-- app:cardCornerRadius="20dp"-->

                            <ImageView
                                android:id="@+id/IDResultadoAskImageViewCabecera"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="top|center"
                                android:elevation="0dp"
                                android:scaleType="fitXY"></ImageView>
                            <!--android:src="@drawable/pisco_sour_3"-->

                        </androidx.cardview.widget.CardView>



                        <ImageView
                            android:id="@+id/IDBackInResultadoAgain"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:clickable="true"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="40dp"
                            android:elevation="4dp"
                            android:src="@drawable/backdonde" />
                        <TextView
                            android:id="@+id/IdTextViewReceta"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ImageViewButtonBackInPerfil"
                            android:layout_marginTop="180dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="bold"
                            android:paddingLeft="0dp"
                            android:lineHeight="70dp"

                            android:textColor="#d7da2e"
                            android:textSize="60dp"
                            android:elevation="4dp"
                            android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="35dp"
                            android:textAlignment="textStart"

                            ></TextView>
                        <!--      android:text="@string/app_es_resultado_juego_titulo"-->

                        <LinearLayout
                            android:id="@+id/IDResultadoRecibeUnCantigoTextView"
                            android:background="@drawable/button_border_inicio_white_2"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_below="@+id/IdTextViewReceta"
                            android:layout_width="match_parent"
                            android:elevation="4dp"
                            android:gravity="center"
                            android:layout_height="60dp">

                            <TextView
                                android:id="@+id/marg"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"
                                android:fontFamily="@font/clan_offc_bold"
                                android:textSize="15dp"
                                ></TextView>
                            <!--      android:text="@string/app_es_resultado_juego_titulo_cuerpo"-->

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/IDAskResultadoJuegoBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:elevation="4dp"
                            android:layout_below="@+id/IDResultadoRecibeUnCantigoTextView"

                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginLeft="40dp"
                                android:paddingTop="10dp"
                                android:background="@drawable/rectangulorosa"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="25dp"
                                    android:src="@drawable/alert_white" />
                                <TextView
                                    android:id="@+id/IDapp_es_incorrecto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="textEnd"
                                    android:textColor="#FFFFFF"
                                    android:fontFamily="@font/peforgestudio_kapra_neue_medium_0"
                                    android:textSize="24dp"></TextView>
                                <!--      android:text="@string/app_es_incorrecto"-->

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="40dp"
                                android:elevation="4dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="40dp"
                                android:layout_marginLeft="40dp"
                                android:background="@drawable/button_border_inicio_white_bottom"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/IDTextResultadoAgainIncorrecto"
                                    android:textStyle="normal"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/clan_offc_book"
                                    android:textAlignment="center"
                                    android:textColor="@color/colorAccent"
                                    />
                                <!--      android:text="@string/app_es_incorrecto"-->
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/IDTextViewAgainMasOpciones"
                            android:layout_below="@+id/IDAskResultadoJuegoBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textStyle="normal"
                            android:textSize="20sp"
                            android:fontFamily="@font/clan_offc_book"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent" />
                        <!--      android:text="@string/app_es_resultado_jugar_mas_opciones"-->
                        <LinearLayout
                            android:layout_below="@+id/IDTextViewAgainMasOpciones"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="20dp"
                            android:background="#fff"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/button_border_blue"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/IDButtonResultadoJuegoAgainJugarDenuevo"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:background="#00FFFFFF"
                                    android:elevation="2dp"
                                    android:paddingLeft="25dp"
                                    android:fontFamily="@font/clan_offc_bold"

                                    android:textAlignment="textStart"
                                    android:textStyle="bold"
                                    android:textColor="#fff"
                                    android:textSize="14dp"
                                    tools:ignore="RtlCompat"></Button>
                                <!--      android:text="@string/app_es_jugar_denuevo"-->
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="18dp"
                                    android:layout_marginRight="25dp"
                                    android:src="@drawable/ruleta_mini" />

                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</FrameLayout>
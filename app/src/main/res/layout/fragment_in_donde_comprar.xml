<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.WhereBuyFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.google.android.gms.maps.MapView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="60dp"
        android:background="@color/colorAccent">
        <include
            layout="@layout/layout_background_pp_in_part_first"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"

        android:orientation="vertical">
        <ImageView
            android:id="@+id/ImageViewButtonBackMap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:contentDescription="TODO"
            android:elevation="8dp"
            android:layout_marginLeft="55dp"
            android:src="@drawable/backdonde" />
        <!--<Spinner
            android:id="@+id/IdEditTextCiudad"
            android:hint="@string/app_es_pais"
            android:layout_marginTop="20dp"
            style="@style/layout_pp_in_donde_comprar_Spinner"
            />-->
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"

            android:layout_marginTop="10dp">

            <Spinner
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/IdEditTextCiudad"
                android:hint="@string/app_es_pais"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                android:layout_margin="10dp"
                android:theme="@style/SpinnerTheme"
                android:layout_height="50dp"
                style="@style/txt_spinner_light"
                />
            <!--
                android:theme="@style/SpinnerTheme"-->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="8dp"
                android:elevation="4dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/dropdownbottom" />

        </RelativeLayout>


    </LinearLayout>
    <include layout="@layout/layout_card_google" />
</FrameLayout>
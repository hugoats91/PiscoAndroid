                            />
                    </LinearLayout>

                </LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/IDTexViewDescription"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:fontFamily="@font/clan_offc_book"
                        android:paddingTop="25dp"
                        android:text="IDTexViewDescription"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/IDTexViewDescriptionNumbers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/clan_offc_book"
                            android:text="IDTexViewDescriptionNumbers"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/IDTexViewTab1"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/circle_no_solid"
                                />
                            <Button
                                android:id="@+id/IDTexViewTab2"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/circle_solid"

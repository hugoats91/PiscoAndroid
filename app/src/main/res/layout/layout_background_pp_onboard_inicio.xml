        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        style="@style/layout_pp_onboard_normal_RelativeLayoutFour">
        <LinearLayout
            style="@style/layout_pp_onboard_normal_RelativeLayoutFirst_LinearLayout"
            >
            <RelativeLayout
                style="@style/layout_pp_onboard_normal_RelativeLayoutFirst_LinearLayout_RelativeLayoutFirstAndThree">
                <LinearLayout
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="16sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeStepGranularity="2sp"
                        android:id="@+id/IDTexViewSaltar"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:fontFamily="@font/clan_offc_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                       />
                    <!-- android:text="Saltar"-->
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                style="@style/layout_pp_onboard_normal_RelativeLayoutFirst_LinearLayout_RelativeLayoutSecond">

            </RelativeLayout>
            <RelativeLayout
                android:gravity="top|center"
                android:layout_gravity="center"
                android:textAlignment="center"
                style="@style/layout_pp_onboard_normal_RelativeLayoutFirst_LinearLayout_RelativeLayoutFirstAndThree">
                <!--<ImageView
                    style="@style/layout_pp_onboard_normal_RelativeLayoutFirst_LinearLayout_RelativeLayoutSecond_ImageView_2"
                    />-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/IDTexViewListo"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="16sp"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeStepGranularity="2sp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:visibility="invisible"
                        android:fontFamily="@font/clan_offc_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        />
                    <!--android:text="¡Listo!"-->
                    <ImageView
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:id="@+id/IDImageViewNext"
                        android:layout_width="10dp"
                        android:clickable="true"
                        android:src="@drawable/imagensiguienteblack"
                        android:layout_height="20dp"
                        ></ImageView>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
                    android:id="@+id/IDLinearLayoutImg"
                    style="@style/layout_pp_login_normal_RelativeLayoutSecond_LinearLayout">
                    <ImageView
                        android:id="@+id/IDImageCenterOnBoard"
                        android:layout_marginTop="-30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_alignBottom="@+id/IDLinearLayoutImg"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"

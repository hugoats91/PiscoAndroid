<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.LogInEmailRegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />     <include layout="@layout/layout_pp_login_create_user"/>-->

    <LinearLayout
        style="@style/layout_pp_login_email_normal_LinearLayout"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/layout_background_pp_login_normal_part_first"/>

                <include layout="@layout/layout_background_pp_login_normal_part_second"/>

                <RelativeLayout
                    style="@style/layout_pp_login_normal_RelativeLayoutThree"
                    >
                    <LinearLayout
                        style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout"

                        android:gravity="center">
                        <!--<TextView
                            android:id="@+id/textView"
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_TextView"

                            android:textAlignment="center"
                            />-->
                        <TextView
                            android:id="@+id/textView"
                            style="@style/txt_login"
                            android:textAlignment="center"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="00dp"
                            android:textSize="14dp"

                            />
                        <!-- android:hint="@string/app_es_completar_campos_password"-->
                        <LinearLayout
                            style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutFirst"
                            android:layout_marginRight="60dp"
                            android:layout_marginLeft="60dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">
                            <EditText
                                android:id="@+id/IdEditTextNombre"
                                android:background="@drawable/editext_border"
                                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ áéíóú"
                                style="@style/txt_input_with_hint"/>
                            <!-- android:hint="@string/app_es_nombre"-->

                            <EditText
                                android:id="@+id/IdEditTextCorreo"
                                android:background="@drawable/editext_border"
                                android:inputType="textEmailAddress"
                                style="@style/txt_input_with_hint"/>
                            <!-- android:hint="@string/app_es_correo"-->
                            <EditText
                                android:id="@+id/IdEditTextContrasena"
                                android:background="@drawable/editext_border"
                                android:inputType="textPassword"
                                style="@style/txt_input_with_hint"/>
                            <!-- android:hint="@string/app_es_contrasena"-->
                            <EditText
                                android:id="@+id/IdEditTextContrasenaConfirmar"
                                android:background="@drawable/editext_border"
                                android:inputType="textPassword"
                                style="@style/txt_input_with_hint" />

                            <!-- android:hint="@string/app_es_contrasena_confirmar"-->
                            <!--<EditText
                                android:id="@+id/IdEditTextPais"
                                android:background="@drawable/editext_border"
                                style="@style/layout_pp_login_email_normal_RelativeLayoutThree_LinearLayout_LinearLayoutFirst_EditText"
                                android:hint="@string/app_es_pais" />-->

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/IdEditTextPais"
                                    android:hint="@string/app_es_pais"
                                    android:layout_height="match_parent"
                                    style="@style/txt_spinner_light"
                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="15dp"
                                    android:rotation="180"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/dropdownbottom1" />

                            </RelativeLayout>
                            <Button
                                android:id="@+id/IDButtonRegistroEmail"
                                style="@style/button_login"
                                android:textAlignment="center"
                                />

                            <!-- android:text="@string/app_es_register"-->
                            <TextView
                                android:textAlignment="center"
                                android:id="@+id/IDTextViewLoginCreateUserYaTengoCuenta"
                                style="@style/txt_login"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:clickable="true"
                                />
                            <!-- android:text="@string/app_es_cuenta"-->

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>



    </LinearLayout>
</FrameLayout>
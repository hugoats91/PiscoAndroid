<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom|center"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginBottom="20dp"
    android:id="@+id/IDDondeComprarMapa"
    android:elevation="4dp"><!--
        android:gravity="bottom" android:visibility="invisible"-->
    <ImageView
            android:layout_marginTop="55dp"
            android:layout_marginRight="15dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/IDPuntClose"
            android:elevation="9dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/closemapa"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/IDLinearLayoutHeaderCardGoogle"
        android:layout_height="45dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/Id_app_es_disponible"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingLeft="30dp"
            android:fontFamily="@font/clan_offc_bold"
            android:textSize="10dp"
            android:layout_height="match_parent"></TextView>
        <!--
            android:text="Disponible en:"-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:id="@+id/IDTiendasOnlineLinearLayout"
            android:layout_height="match_parent">

            <!-- <LinearLayout
               android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/IdImageView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"></ImageView>
            </LinearLayout>-->
        </LinearLayout>
    </LinearLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_below="@+id/IDLinearLayoutHeaderCardGoogle"
      android:layout_width="match_parent"
      android:background="@drawable/rectangule_shadow_bottom"
      android:layout_height="220dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/IDLinearLayoutBody"
          android:layout_below="@+id/IDLinearLayoutHeaderCardGoogle"
          android:layout_above="@+id/IDLinearLayoutBottomRedesSociales"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:orientation="vertical"

          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginRight="10dp"
              android:id="@+id/IDContentLinearLayout_1"
              android:orientation="horizontal">

              <LinearLayout
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  android:gravity="center_horizontal|center_vertical|start|top"
                  android:orientation="vertical">
                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:id="@+id/IDPuntImagen"
                      android:scaleType="centerCrop"
                      android:padding="5dp"
                      android:elevation="8dp"

                      >
                      <!--                       android:background="@drawable/round_shape"
  android:src="@drawable/grocerystore"  v  -->
                  </ImageView>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                  android:orientation="vertical">
                  <TextView
                      android:layout_width="wrap_content"
                      android:id="@+id/IDPuntNombre"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorAccent"
                      android:textSize="16dp"
                      android:lineHeight="25dp"
                      android:layout_weight="1"

                      android:fontFamily="@font/clan_offc_bold"
                     />
                  <!--  android:text="September Wines AND Spirits"   -->
                  <TextView
                      android:id="@+id/IDPuntTelefono"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorAccent"
                      android:layout_gravity="bottom"
                      android:gravity="bottom"

                      android:layout_marginBottom="5dp"
                      android:layout_weight="0.2"
                      android:textSize="15sp"
                      android:fontFamily="@font/clan_offc_book"
                      />
                  <!--  android:text="+1 212-288-0770"  -->
              </LinearLayout>

          </LinearLayout>
          <RelativeLayout

              android:layout_width="match_parent"
              android:layout_height="70dp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:layout_marginTop="10dp"
                  android:layout_weight="1"
                  android:orientation="vertical">
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.5"

                      android:gravity="center_vertical"
                      android:orientation="horizontal"
                      >
                      <ImageView
                          android:layout_width="15dp"
                          android:layout_marginRight="10dp"
                          android:layout_height="15dp"
                          android:src="@drawable/iconreloj">
                      </ImageView>

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/IDPuntHorario"
                          android:textColor="@color/colorAccent"
                          android:textSize="12sp"
                          android:fontFamily="@font/clan_offc_book"
                         />
                        <!-- android:text="12:00 pm - 19:00 pm" -->
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_weight="0.5"
                      >

                      <ImageView
                          android:layout_width="15dp"
                          android:layout_marginRight="10dp"
                          android:layout_height="15dp"
                          android:src="@drawable/iconbolso">
                      </ImageView>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:textSize="12sp"
                          android:textColor="@color/colorAccent"
                          android:layout_marginRight="40dp"
                          android:fontFamily="@font/clan_offc_book"
                          android:id="@+id/IDPuntDireccion"
                         />
                      <!-- android:text="12:00 pm - 19:00 pm"  -->
                  </LinearLayout>
              </LinearLayout>
              <ImageView
                  android:layout_width="28dp"
                  android:id="@+id/IDPuntMapa"
                  android:layout_alignParentRight="true"
                  android:layout_marginTop="10dp"
                  android:layout_height="70dp"
                  android:src="@drawable/pingooglemap"></ImageView>
          </RelativeLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:layout_alignParentBottom="true"
              android:id="@+id/IDLinearLayoutBottomRedesSociales"
              >
              <ImageView
                  android:layout_width="25dp"
                  android:layout_marginRight="15dp"
                  android:layout_height="25dp"

                  android:layout_marginBottom="5dp"
                  android:id="@+id/IDPuntUrlFacebook"
                  android:src="@drawable/fac">
              </ImageView>
              <ImageView
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:layout_marginRight="15dp"
                  android:id="@+id/IDPuntUrlWhatsapp"
                  android:layout_marginBottom="5dp"
                  android:src="@drawable/wh">
              </ImageView>
              <ImageView
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:id="@+id/IDPuntUrlInstagram"
                  android:layout_marginBottom="5dp"
                  android:src="@drawable/inst">
              </ImageView>
          </LinearLayout>
      </LinearLayout>

  </LinearLayout>
</RelativeLayout>
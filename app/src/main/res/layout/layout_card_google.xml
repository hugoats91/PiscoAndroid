<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/IDDondeComprarMapa"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom|center"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginBottom="20dp"
    android:elevation="4dp"><!--
        android:gravity="bottom" android:visibility="invisible"-->
    <ImageView
        android:id="@+id/IDPuntClose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="55dp"
        android:layout_marginRight="15dp"
        android:elevation="9dp"
        android:padding="5dp"
        android:src="@drawable/closemapa" />

    <LinearLayout
        android:id="@+id/IDLinearLayoutHeaderCardGoogle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Id_app_es_disponible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/clan_offc_bold"
            android:paddingLeft="30dp"
            android:paddingTop="16dp"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:textStyle="bold"/>
        <!--
            android:text="Disponible en:"-->
        <LinearLayout
            android:id="@+id/IDTiendasOnlineLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- <LinearLayout
               android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/IdImageView"
                    android:layout_width="15dp"
                    android:layout_height="15dp"></ImageView>
            </LinearLayout>-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/IDLinearLayoutHeaderCardGoogle"
        android:background="@drawable/rectangule_shadow_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/IDLinearLayoutBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/IDLinearLayoutBottomRedesSociales"
            android:layout_below="@+id/IDLinearLayoutHeaderCardGoogle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"

            >

            <LinearLayout
                android:id="@+id/IDContentLinearLayout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:gravity="center_horizontal|center_vertical|start|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/IDPuntImagen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="8dp"
                        android:padding="5dp"
                        android:scaleType="centerCrop"

                        >
                        <!--                       android:background="@drawable/round_shape"
    android:src="@drawable/grocerystore"  v  -->
                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/IDPuntNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/clan_offc_bold"
                        android:lineHeight="25dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp" />
                    <!--  android:text="September Wines AND Spirits"   -->
                    <TextView
                        android:id="@+id/IDPuntTelefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.2"

                        android:fontFamily="@font/clan_offc_book"
                        android:gravity="bottom"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />
                    <!--  android:text="+1 212-288-0770"  -->
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/iconreloj"></ImageView>

                        <TextView
                            android:id="@+id/IDPuntHorario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/clan_offc_book"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp" />
                        <!-- android:text="12:00 pm - 19:00 pm" -->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/iconbolso"></ImageView>

                        <TextView
                            android:id="@+id/IDPuntDireccion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/clan_offc_book"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp" />
                        <!-- android:text="12:00 pm - 19:00 pm"  -->
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/IDPuntMapa"
                    android:layout_width="28dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/pingooglemap"></ImageView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/IDLinearLayoutBottomRedesSociales"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IDPuntUrlFacebook"
                    android:layout_width="25dp"
                    android:layout_height="25dp"

                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/fac"></ImageView>

                <ImageView
                    android:id="@+id/IDPuntUrlWhatsapp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/wh"></ImageView>

                <ImageView
                    android:id="@+id/IDPuntUrlInstagram"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/inst"></ImageView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>